{% extends 'CloudCloudspacesBundle::mobile_base.html.twig' %}

{% block header %}
        {% trans %}Create an Account{% endtrans %}
{% endblock %}

{% block content %}
    <div data-role="content" data-ajax="false">
        <div class="idioma">
                <a href="{{ path("nuevo_usuario", {"_locale": "es"}) }}" data-transition="fade"><img src="{{ asset('imagenes/es.png') }}" alt="Español" /></a>
                <a href="{{ path("nuevo_usuario", {"_locale": "en"}) }}" data-transition="fade"><img src="{{ asset('imagenes/en.png') }}" alt="English" /></a>
        </div>

        <form id="registro"  action="{{path('nuevo_usuario')}}" method="POST" {{ form_enctype(formulario) }} data-ajax="false">

            {{ form_widget(formulario) }}
            {{ form_rest(formulario) }}


            <a href="#popupCondiciones" data-rel="popup">{% trans %}Terms and Conditions{% endtrans %}</a>
            <div data-role="popup" id="popupCondiciones" class="ui-content">
