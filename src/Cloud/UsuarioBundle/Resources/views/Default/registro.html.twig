            </div>

            <input name="checkbox-1a" id="checkbox-1a" type="checkbox">
            <label for="checkbox-1a">{% trans %}I have read and agree to the terms{% endtrans %}</label>


            <input class="boton" id="postme" type="submit" value="{% trans %}Sign me up{% endtrans %}" />

            <a class="volver" href="{{ path('cloud_cloudspaces_homepage') }}">{% trans %}Go back{% endtrans %}</a>
        </form>

    </div>

{% endblock %}

{% block js %}
    $( document ).on( "pageinit", function( event ) {
            $('#checkbox-1a').prop('checked', false);;
            $('#postme').button('disable');

            $('#checkbox-1a').click(function(){
                if($(this).prop('checked')){
                    $('#postme').button('enable');
                } else {
                    $('#postme').button('disable');
                }

//                $('[type="submit"]').button('refresh');
            });
        });
{% endblock %}



