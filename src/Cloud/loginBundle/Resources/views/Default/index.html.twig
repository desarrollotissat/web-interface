{% extends 'CloudCloudspacesBundle::base.html.twig' %}

{% block content %}
        <a href="{{ path("login", {"_locale": "es"}) }}">Español</a>
        <a href="{{ path("login", {"_locale": "en"}) }}">English</a>
	<h3>{{ 'your.session.locale' }} [{{ app.session.get('_locale') }}]</h3>
        <h3>{{ 'your.request.locale' }} [{{ app.request.get('_locale') }}]</h3>

 	{% if usuario %}
        <div class="error">{{ usuario.nombre }}</div>
    {% endif %}
    
    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}
	
	<img alt="Cloudspaces" class="imgcloud" src="{{ asset('imagenes/logoCloud.png') }}">
	
    <form onSubmit="validarForm()" action="{{ path("login_check", {'_locale': app.request.attributes.get('_locale')}) }}" method="post" id="login">
        <div>
            <label for="username">{% trans %}Usuario{% endtrans %}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <p class="ejemplo">Ej: tissat@cloudspaces.eu </p>
        </div>

        <div>
            <label for="password">{% trans %}Contraseña{% endtrans %}</label>
            <input type="password" id="password" name="_password" />
        </div>

        <input type="submit" class="symfony-button-grey" value="{% trans %}Entrar{% endtrans %}" />

    </form>
    
    
    <div class="enlacesPortada">

    	<img alt="Cloudspaces" src="{{ asset('imagenes/olvido_contra.png') }}">
    	<a href="{{ path("login_check") }}">Olvidé mi contraseña</a>

    	<img alt="Cloudspaces" src="{{ asset('imagenes/registro.png') }}">
    	<a href="{{ path("nuevo_usuario") }}">Registrase</a>

    	<img alt="Cloudspaces" src="{{ asset('imagenes/legal.png') }}">
    	<a href="{{ path("login_check") }}">{% trans %}Normativa legal{% endtrans %}</a>

    </div>
    
{% endblock %}

