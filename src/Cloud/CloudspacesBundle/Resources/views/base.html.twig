<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Cloudspaces{% endblock %}</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/demo.css') }}" />
        <script src="{{ asset('js/cloud.js') }}" type="text/javascript"></script>
    </head>
    <body>
        <div id="symfony-wrapper">
            <div id="symfony-header">
                <a href="{{ path('_welcome') }}">
                    <img src="{{ asset('imagenes/logo_tissat.png') }}" alt="Cloudspaces" />
                </a>
               
               {#<div class="idioma">#}
               		{#&#123;&#35;Idioma Español (<a href="{{path("change_language")}}" class="" >cambiar</a>)  &#35;&#125;#}
               		{#<img src="{{ asset('imagenes/es.png') }}" alt="Español" />#}
               {#</div>#}
            </div>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}

            
            <div style="clear: both"></div>

            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

            {% if code is defined %}
                <h2>Code behind this page</h2>
                <div class="symfony-content">{{ code|raw }}</div>
            {% endif %}
        </div>
    </body>
</html>
